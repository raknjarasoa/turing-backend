## DB Models

type User implements Base {
  name: String!
  email: String! @unique
  # password: String!
  resetToken: String
  resetTokenExpiry: Float
  permissions: [Permission]
  # cart: [CartItem!]!
}

type Product implements Base {
  name: String!
  description: String!
  price: Float!
  discounted_price: Float! @default(value: 0.00)
  image: String
  image_2: String
  thumbnail: String
  display: Int @default(value: 0)
}
